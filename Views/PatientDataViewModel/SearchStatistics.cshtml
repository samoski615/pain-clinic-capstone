<!DOCTYPE HTML>
<html>
<head>
    <script type="text/javascript">
        window.onload = function () {

            var chart1 = new CanvasJS.Chart("chartContainer1", {
                theme: "dark2", // "light2", "dark1", "dark2"
                animationEnabled: true, // change to true
                title: {
                    text: "Pain Ratings/Average Past 30 Days"
                },
                data: [
                    {
                        // Change type to "bar", "area", "spline", "pie",etc.
                        type: "column",
                        dataPoints: [
                            { label: "Pain Rank: 1", y: @ViewBag.ratingOne },
                            { label: "Pain Rank: 2", y: @ViewBag.ratingTwo },
                            { label: "Pain Rank: 3", y: @ViewBag.ratingThree },
                            { label: "Pain Rank: 4", y: @ViewBag.ratingFour },
                            { label: "Pain Rank: 5", y: @ViewBag.ratingFive }
                        ]
                    }
                ]
            });
            chart1.render();


             var chart2 = new CanvasJS.Chart("chartContainer2", {
                theme: "light1", // "light2", "dark1", "dark2"
                animationEnabled: true, // change to true
                title: {
                    text: "Pain Location/Average Past 30 Days"
                },
                data: [
                    {
                        // Change type to "bar", "area", "spline", "pie",etc.
                        type: "pie",
                        dataPoints: [
                            { label: "Upper Back", y: @ViewBag.upperBack },
                            { label: "Lower Back", y: @ViewBag.lowerBack },
                            { label: "Neck", y: @ViewBag.neck },
                            { label: "Head", y: @ViewBag.head },
                            { label: "Legs", y: @ViewBag.legs },
                            { label: "Arms", y: @ViewBag.arms },
                            { label: "Shoulders", y: @ViewBag.shoulders}
                        ]
                    }
                ]
            });
            chart2.render();

             var chart3 = new CanvasJS.Chart("chartContainer3", {
                theme: "light1", // "light2", "dark1", "dark2"
                animationEnabled: true, // change to true
                title: {
                    text: "Amount of Sleep/Night - Average Past 30 Days"
                },
                data: [
                    {
                        // Change type to "bar", "area", "spline", "pie",etc.
                        type: "pie",
                        dataPoints: [
                            { label: "1 Hour", y: @ViewBag.oneHour },
                            { label: "2 Hours", y: @ViewBag.twoHour },
                            { label: "3 Hours", y: @ViewBag.threeHour },
                            { label: "4 Hours", y: @ViewBag.fourHour },
                            { label: "5 Hours", y: @ViewBag.fiveHour },
                            { label: "6 Hours", y: @ViewBag.sixHour },
                            { label: "7 Hours", y: @ViewBag.sevenHour },
                            { label: "8 or More Hours", y: @ViewBag.eightOrMoreHour }
                        ]
                    }
                ]
            });
            chart3.render();

             var chart4 = new CanvasJS.Chart("chartContainer4", {
                theme: "light1", // "light2", "dark1", "dark2"
                animationEnabled: true, // change to true
                title: {
                    text: "Activity Level Overall Past 30 Days"
                },
                data: [
                    {
                        // Change type to "bar", "area", "spline", "pie",etc.
                        type: "pie",
                        dataPoints: [
                            { label: "Sedentary", y: @ViewBag.sedentary },
                            { label: "Moderate", y: @ViewBag.moderate },
                            { label: "High", y: @ViewBag.high }                        
                        ]
                    }
                ]
            });
            chart4.render();
        }
    </script>
</head>
<body>
    <br /><br />
    <div id="chartContainer1" style="height: 370px; width: 100%;"></div>
    <br /><br />
    <div id="chartContainer2" style="height: 370px; width: 100%;"></div>
    <br /><br />
    <div id="chartContainer3" style="height: 370px; width: 100%;"></div>
    <br /><br />
    <div id="chartContainer4" style="height: 370px; width: 100%;"></div>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</body>
</html>